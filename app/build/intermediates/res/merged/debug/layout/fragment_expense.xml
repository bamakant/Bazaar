<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kiusoftech.bazaar.ExpenseFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Date"
            style="@style/expenseListItemStyle"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:layout_weight=".75"/>
        <TextView
            android:text="Food"
            style="@style/expenseListItemStyle"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:layout_weight=".9"/>
        <TextView
            android:text="Auto"
            style="@style/expenseListItemStyle"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:layout_weight=".9"/>
        <TextView
            android:text="Others"
            style="@style/expenseListItemStyle"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:layout_weight=".9"/>
        <TextView
            android:text="Kaku"
            style="@style/expenseListItemStyle"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:layout_weight=".9"/>
    </LinearLayout>
    <!-- Empty view for the list -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listExpense"
        android:layout_weight="1"
        >
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:background="@color/reportPrimaryDark"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Last Updated :"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            />

        <TextView
            android:id="@+id/lastUpdatedDataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight=".50"
            android:text="20171009"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>
